<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="Overdraw"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="#ff33b5e5"
    android:padding="10dp">

    <ImageView android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/wifi_scan_black"
        android:contentDescription="@string/label_bad_network_connection"
        android:id="@+id/crouton_image"/>

    <LinearLayout android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <!--<TextView android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="#fff"-->
            <!--android:text="@string/waiting" />-->

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="@string/label_bad_network_connection"
            android:id="@+id/crouton_message"/>
    </LinearLayout>
</LinearLayout>