<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Single ListItem -->
    <android.support.v7.widget.CardView
        android:id="@+id/delivery_order_increase_dialog_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@color/whiteFFFFFF"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="30dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <!--Header-->
            <!--BlueColor-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/card_margin"
                android:background="@color/blue0895ef">

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/whiteFFFFFF"/>-->

                <!--Main-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <!--Left-->
                    <!--ImageView-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/card_margin"
                        android:paddingRight="@dimen/card_margin"
                        android:gravity="center"
                        android:layout_weight="4">

                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:siRadius="6dp"
                            app:siBorderWidth="6dp"
                            app:siBorderColor="@color/whiteFFFFFF"
                            app:siSquare="true"
                            android:id="@+id/delivery_order_increase_dialog_receivingOrder_image"/>

                    </LinearLayout>

                    <!--Right-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/card_margin"
                        android:orientation="vertical">

                        <!-- Receiving Order Id -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/delivery_order_increase_dialog_receivingOrder_orderId"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="10dip"
                                android:text="id"
                                android:textSize="20dip"
                                android:textStyle="bold"
                                android:textColor="@color/delivery_increase_value_color"/>
                        </LinearLayout>

                        <!-- ReceivingDate -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="@string/receivingOrder_date" />

                            <TextView
                                android:id="@+id/delivery_order_increase_dialog_receivingOrder_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textColor="@color/delivery_increase_value_color"/>
                        </LinearLayout>


                    </LinearLayout>

                    <!--Finsh-->
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>